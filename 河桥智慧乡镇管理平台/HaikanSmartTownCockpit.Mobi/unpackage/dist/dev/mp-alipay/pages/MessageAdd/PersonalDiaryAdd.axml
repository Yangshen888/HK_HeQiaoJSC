<view><form><view class="cu-form-group"><view class="title" style="width:28%;">标题：</view><input style="width:70%;" placeholder="请输入标题" name="input" data-event-opts="{{[['input',[['__set_model',['$0','headline','$event',[]],['formModel.fields']]]]]}}" value="{{formModel.fields.headline}}" onInput="__e"/></view><view class="cu-form-group"><view class="title" style="width:30%;">撰写时间</view><view style="width:70%;"><view class="picker">{{''+formModel.fields.writeTime+''}}</view></view></view><view class="cu-form-group"><view class="title" style="width:30%;">类型</view><view style="width:70%;"><checkbox-group data-event-opts="{{[['change',[['checkchange',['$event']]]]]}}" onChange="__e"><label style="font-size:12px;" a:for="{{checkboxList}}" a:for-item="item" a:for-index="index"><checkbox value="{{item.name}}"></checkbox><text>{{item.name}}</text></label></checkbox-group></view></view><view class="cu-form-group align-start"><view class="title" style="width:30%;">内容</view><textarea style="width:70%;" maxlength="-1" disabled="{{modalName!=null}}" placeholder="请输入内容" data-event-opts="{{[['input',[['__set_model',['$0','content','$event',[]],['formModel.fields']],['textareaBInput',['$event']]]]]}}" value="{{formModel.fields.content}}" onInput="__e"></textarea></view><view class="cu-bar bg-white"><view class="action">附件：</view></view><view class="cu-form-group"><view class="grid col-4 grid-square flex-sub"><view class="bg-img" data-url="{{imgList[index]}}" data-event-opts="{{[['tap',[['ViewImage',['$event']]]]]}}" onTap="__e" a:for="{{imgList}}" a:for-item="item" a:for-index="index" a:key="index"><image src="{{imgList[index]}}" mode="aspectFill"></image><view class="cu-tag bg-red" data-index="{{index}}" data-event-opts="{{[['tap',[['DelImg',['$event']]]]]}}" catchTap="__e"><text class="cuIcon-close"></text></view></view><block a:if="{{imgList.length<1}}"><view data-event-opts="{{[['tap',[['ChooseImage',['$event']]]]]}}" class="solids" onTap="__e"><text class="cuIcon-cameraadd"></text></view></block></view></view><view class="padding flex flex-direction"><button data-event-opts="{{[['tap',[['submitWancheng',['$event']]]]]}}" class="cu-btn bg-red margin-tb-sm lg" style="background-color:#0081FF;" onTap="__e">完成</button><button data-event-opts="{{[['tap',[['submitfrom',['$event']]]]]}}" class="cu-btn bg-red margin-tb-sm lg" style="background-color:#0081FF;" onTap="__e">确定</button><button data-event-opts="{{[['tap',[['tiaozhuan',['$event']]]]]}}" class="cu-btn bg-grey lg" onTap="__e">取消</button></view></form></view>